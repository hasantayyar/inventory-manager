{% extends '::base_admin.html.twig' %}

{% block content -%} 
    <h1>Car list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Year</th>
                <th>Color</th>
                <th>Plate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_car_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.model }}</td>
                    <td>{{ entity.year }}</td>
                    <td>{{ entity.color }} <span style="display: inline-block;width:20px;height: 20px; background-color: {{entity.color}}"</td>
                    <td>{{ entity.plate }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_car_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_car_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('admin_car_new') }}">
        {{"Create"|trans}}
    </a>

{% endblock %}
